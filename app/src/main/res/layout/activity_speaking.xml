<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".SpeakingActivity">

    <ImageView
        android:id="@+id/imgpilihan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pilihan"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/back"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speaking"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen and understand this conversation"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/linear1"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="-10dp">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaking "
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sections"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/learningListening"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/speaking">
                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_baseline_mic_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="  Speaking"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/A"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pilihan_speak">
                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                       <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="Play Sound A "
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/black"/>
                        <ImageButton
                            android:id="@+id/imgA"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_baseline_play_circle_filled_24"
                            />
                    </LinearLayout>
                </LinearLayout>

                  <LinearLayout
                      android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                      android:id="@+id/B"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pilihan_speak">
                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="Play Sound B "
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/imgB"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_baseline_play_circle_filled_24"
                        />

                </LinearLayout>
                  </LinearLayout>



            </LinearLayout>
<!--            -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Conversation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_bold"/>
                    <TextView
                        android:id="@+id/txtMateri"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conver"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_light"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/btnNext"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:text="Let's go to record "
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/white"
                        android:background="@drawable/go"
                        android:gravity="center"
                        android:layout_gravity="right"/>


                </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>